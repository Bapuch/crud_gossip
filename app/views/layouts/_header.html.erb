<% flash.each do |name, msg| %>
  <% if !flash.alert.nil? %>
    <div class= "text-center text-light bg-danger m-0">
      <%= content_tag :div, msg, class: name %>
    </div>
  <% else %>
    <div class= "text-center text-light bg-success m-0">
      <%= content_tag :div, msg, class: name %>
    </div>
  <% end %>
<% end %>

