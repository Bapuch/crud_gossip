<div class='card-body border border-primary rounded m-2 p-3'>
  <div class="jumbotron card text-center bg-dark">
    <h1 class='card-title text-light text-capitalize font-weight-bold'>create a brand new Gossip</h1>
    <p class='lead font-italic text-info'>Provide the requested information</p>
  </div>
  <div class="container">
   <div class="row justify-content-center">
      <div class="d-flex justify-content-between">
        <div class='col-xs-6 col-sm-10 col-md-10 col-lg-10 col-xl-10'>
          <%= form_for @gossip, class: "form-group", url: {action: :create}, method: 'POST' do |f| %>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text bg-light text-muted" id="basic-addon1">Title</span>
            </div>
            <%= f.text_field :title, class: "form-control", placeholder: "Rick on Marriage", required: true%><br>
          </div>
        </div>
        <div class="d-flex align-items-center">
          <div>
            <%= f.submit 'Submit', class: 'btn btn-outline-primary btn-lg' %>
          </div>
        </div>
      </div>
      <div class='col-xs-6 col-sm-12 col-md-10 col-lg-8 col-xl-8'>
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text bg-light text-muted">Gossip</span>
          </div>
          <%= f.text_area :content, class: "form-control", 'aria-label': "bio", rows: "4", placeholder: "Weddings are basically funerals with cake", required: true %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
